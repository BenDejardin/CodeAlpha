<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-
1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <link rel="stylesheet" href="../stylesheets/style.css">
    <!-- <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datePrev").datepicker({
                dateFormat: 'dd/mm/yy',
                minDate: 0
            });
        });
    </script> -->

</head>

<body>
    <nav class="navbar navbar-expand-lg bg-primary text-uppercase">
        <div class="container">
            <h1 class="text-white">
                <img src="../images/logo.png" class="logo" alt="..." style="height: 2em ;" />
                <%= title %>
            </h1>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3
rounded text-white" href="/">Accueil</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3
rounded text-white" href="/createqr">Creation</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3
rounded text-white" href="/utilisateurs">Interventions</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex justify-content-start">

        <div class="sectionRecherche">
            <form method="post">
                <label for="nom">Nom de l'intervenant</label>
                <div class="search d-flex">
                    <select class="form-select" id="nom" name="code">
                        <option selected>

                        </option>
                        <% intervenants.forEach(function(intervenant) { %>
                            <option value="<%= intervenant.code %>">
                                <%= intervenant.nom %>
                            </option>
                            <% }) %>
                    </select>
                    <button class="btn btn-outline-primary" type="submit">Search</button>

                </div>
                <div class="filtre">
                    <label for="etat" class="selectEtat">Etat</label>
                    <select class="form-select" name="etat">
                        <option selected>

                        </option>
                        <option value="En Cours">En cours</option>
                        <option value="Terminé">Terminées</option>
                    </select>
                </div>
            </form>
        </div>
        <span class="vertical-line"></span>
        <div class="container">
            <h1 class="cover-heading">Table du personnel</h1>
            <table class="table table-striped">
                <thead class="bg-light text-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Rôle</th>
                        <th>Salle</th>
                        <th>Date prév. déb.</th>
                        <th>Heure prév. déb.</th>
                        <th>Date entrée</th>
                        <th>Heure entrée</th>
                        <th>Date sortie</th>
                        <th>Heure sortie</th>
                        <th>Etat</th>
                    </tr>
                </thead>
                <tbody>
                    <% interventions.forEach(function(intervention) { %>
                        <% if(etat=="Aucun" || intervention.etat==etat){ %>
                            <tr>
                                <td>
                                    <%= intervention.intervenants[0].nom %>
                                </td>

                                <td>
                                    <%= intervention.intervenants[0].poste %>
                                </td>

                                <td>
                                    <%= intervention.salle %>
                                </td>
                                <td>
                                    <%= intervention.date_prev %>
                                </td>
                                <td>
                                    <%= intervention.heure_prev %>
                                </td>
                                <td>
                                    <%= intervention.date_deb %>
                                </td>
                                <td>
                                    <%= intervention.heure_deb %>
                                </td>
                                <td>
                                    <%= intervention.date_fin %>
                                </td>
                                <td>
                                    <%= intervention.heure_fin %>
                                </td>
                                <td>
                                    <%= intervention.etat %>
                                </td>
                            </tr>
                            <%}%>
                                <% }); %>

                </tbody>
            </table>
        </div>
    </div>
</body>

</html>